<basics:ChildWindow
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
	xmlns:expressionLight="clr-namespace:System.Windows.Controls.Theming;assembly=System.Windows.Controls.Theming.ExpressionLight"
	x:Class="SISAR.WebAnimation.About"
	Title="Quienes Somos"
	Width="400" Height="300">
    <basics:ChildWindow.OverlayBrush>
        <RadialGradientBrush Opacity="0.5">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="DimGray" Offset="1"/>
        </RadialGradientBrush>
    </basics:ChildWindow.OverlayBrush>

    <expressionLight:ExpressionLightTheme>
        <Grid x:Name="LayoutRoot">
            <ScrollViewer HorizontalAlignment="Right" Margin="0" Width="200" BorderBrush="{x:Null}" VerticalScrollBarVisibility="Auto">
        		<TextBlock Text="Bienvenido a la página web de Mi Carcochita. " TextWrapping="Wrap" Height="265" Width="200"/>
        	</ScrollViewer>
            <Image HorizontalAlignment="Left" Margin="0,-55" Width="178" Source="Imagenes/Taco.png"/>
        </Grid>
    </expressionLight:ExpressionLightTheme>
    
</basics:ChildWindow>