<UserControl x:Class="SISAR.Desktop.Seguridad.CambioPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
        <Grid  Name="Form">
            <GroupBox
                  Header="Cambio de Contraseña"  
                  HorizontalAlignment="Center"  
                  VerticalAlignment="Center"
                  Width="290">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="120" Content="Contraseña Actual"/>
                        <PasswordBox Name="txtPasswordActual" Width="160"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="120" Content="Contraseña Nueva"/>
                        <PasswordBox Name="txtNuevoPassword" Width="160"/>
                    </StackPanel>
               <StackPanel Orientation="Horizontal">
                    <Label Width="120" Content="Confirmar Contraseña"/>
                    <PasswordBox Name="txtConfirmacionPassword" Width="160"/>
                        
                </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
</UserControl>
