<UserControl x:Class="SISAR.Desktop.Seguridad.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Grid Background="{DynamicResource ControlBackgroundBrush}">
        <GroupBox Header="Login" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,12,12" Width="212">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Usuario" Width="80"/>
                    <TextBox Name="txtUsuario" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Contraseña" Width="80"/>
                    <PasswordBox Name="txtPassword" Width="120"/>
                </StackPanel>
                <Button Width="80" Content="Ingresar" HorizontalAlignment="Right"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
