<UserControl x:Class="SISAR.Desktop.Administracion.MesaItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="UserControl_Loaded">    
    <Grid>
        <StackPanel Orientation="Horizontal" Background="Transparent">
            <Canvas Name="canvas" Width="{Binding Path=Width}" Height="{Binding Path=Height}" Background="Transparent">
                <Image Name="imagen"  Width="{Binding Path=Width}" Height="{Binding Path=Height}" Source="{Binding Path=Imagen}" Margin="{Binding Path= Id_Mesa}" />
            </Canvas>
            <TextBlock Text="{Binding Path=Descripcion}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
